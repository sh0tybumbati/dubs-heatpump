<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Heat Pump Outdoor Unit -->
	<ThingDef ParentName="BasedHeating">
		<defName>HeatPumpOutdoorUnit</defName>
		<label>heat pump outdoor unit</label>
		<description>An outdoor unit for a heat pump system. Must be connected to indoor units via dedicated heat pump ducts (separate from regular air conditioning ducts). Can provide both heating and cooling depending on indoor unit operation. More efficient than separate heating and cooling systems. Note: All indoor units on the same network will operate in the same mode (heating or cooling).</description>
		<thingClass>DubsHeatPumps.Building_HeatPumpOutdoor</thingClass>
		<graphicData>
			<texPath>DBH/Things/Building/airconoutdoorunit</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2,2)</drawSize>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.35</staticSunShadowHeight>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>40</pathCost>
		<blockWind>true</blockWind>
		<fillPercent>0.5</fillPercent>
		<coversFloor>true</coversFloor>
		<blockLight>true</blockLight>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<WorkToBuild>2000</WorkToBuild>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<Mass>30</Mass>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(2,1)</size>
		<costList>
			<Steel>90</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<building>
			<canPlaceOverWall>false</canPlaceOverWall>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>250</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="DubsBadHygiene.CompProperties_Pipe">
				<mode>HeatPump</mode>
			</li>
			<li Class="DubsBadHygiene.CompProperties_AirconBaseUnit">
				<BaseCapacity>120</BaseCapacity>
				<PowerModes>10</PowerModes>
			</li>
		</comps>
		<designationCategory>Temperature</designationCategory>
		<researchPrerequisites>
			<li>HeatPumps</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>7</constructionSkillPrerequisite>
	</ThingDef>

	<!-- Heat Pump Indoor Unit -->
	<ThingDef ParentName="BaseAircon">
		<defName>HeatPumpIndoorUnit</defName>
		<label>heat pump indoor unit</label>
		<description>An indoor unit for a heat pump system. Automatically switches between heating and cooling modes based on the target temperature and current room temperature. Requires connection to a heat pump outdoor unit via dedicated heat pump ducts (not compatible with regular AC ducts). When cooling, the outdoor unit exhausts heat. When heating, the outdoor unit absorbs heat from outside air. Heating disabled when outdoor temperature drops below -25°C (-13°F).</description>
		<thingClass>DubsHeatPumps.Building_HeatPumpIndoor</thingClass>
		<graphicData>
			<texPath>DBH/Things/Building/airconindoorunit</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2,1)</drawSize>
			<damageData>
				<rect>(0.234375,0,0.515625,0.234375)</rect>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<altitudeLayer>PawnUnused</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>40</pathCost>
		<blockWind>true</blockWind>
		<fillPercent>0.5</fillPercent>
		<coversFloor>false</coversFloor>
		<blockLight>false</blockLight>
		<canOverlapZones>false</canOverlapZones>
		<castEdgeShadows>false</castEdgeShadows>
		<staticSunShadowHeight>0</staticSunShadowHeight>
		<statBases>
			<WorkToBuild>1000</WorkToBuild>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<Mass>10</Mass>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(2,1)</size>
		<costList>
			<Steel>25</Steel>
		</costList>
		<building>
			<canPlaceOverWall>true</canPlaceOverWall>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>25</basePowerConsumption>
			</li>
			<li Class="DubsBadHygiene.CompProperties_CompAirconUnit">
				<energyPerSecond>-21</energyPerSecond>
				<CoolingRate>250</CoolingRate>
				<Capacity>120</Capacity>
			</li>
			<li Class="CompProperties_TempControl">
				<energyPerSecond>21</energyPerSecond>
			</li>
			<li Class="DubsBadHygiene.CompProperties_Pipe">
				<mode>HeatPump</mode>
			</li>
			<li Class="DubsHeatPumps.CompProperties_HeatPump">
				<modeThreshold>2</modeThreshold>
				<efficiencyMultiplier>1.2</efficiencyMultiplier>
				<minHeatingOutdoorTemp>-25</minHeatingOutdoorTemp>
			</li>
		</comps>
		<placeWorkers>
			<li>DubsBadHygiene.PlaceWorker_WallAttachment</li>
			<li>PlaceWorker_Heater</li>
		</placeWorkers>
		<designationCategory>Temperature</designationCategory>
		<researchPrerequisites>
			<li>HeatPumps</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	</ThingDef>

</Defs>
